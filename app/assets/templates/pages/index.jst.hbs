{{#each formatted_tweets}}
	<li class="tweet">
		<span class="time">{{this.time}}</span>
		<img src="{{this.avatar}}" />
		<h3>{{this.screen_name}}&nbsp;<span>&#40{{this.real_name}}&#41</span></h3>
		<p>{{this.tweet_body}}</p>
		<a href="{{this.tweet_url}}" target="_blank">
			<span>&gt;</span>
		</a>
	</li>
{{/each}}